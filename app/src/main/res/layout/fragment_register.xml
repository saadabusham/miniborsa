<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.technzone.miniborsa.ui.auth.register.viewmodels.RegistrationViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeHeader"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/layout_toolbar"
                layout="@layout/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:fillViewport="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shapeAppearanceOverlay="@style/top_cardview_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.technzone.miniborsa.ui.base.views.AppTextView
                            style="@style/textview_normal_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/thousands_of_business_nwaiting_for_you"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_21ssp" />

                        <com.technzone.miniborsa.ui.base.views.AppTextInputLayout
                            android:id="@+id/tfFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:hint="@string/full_name">

                            <com.technzone.miniborsa.ui.base.views.AppTextInputEditText
                                android:id="@+id/edFullName"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.fullNameMutableLiveData}"
                                android:textSize="@dimen/_10ssp" />

                        </com.technzone.miniborsa.ui.base.views.AppTextInputLayout>

                        <com.technzone.miniborsa.ui.base.views.AppTextInputLayout
                            android:id="@+id/tfEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:hint="@string/last_name">

                            <com.technzone.miniborsa.ui.base.views.AppTextInputEditText
                                android:id="@+id/edEmail"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@={viewModel.emailMutableLiveData}"
                                android:textSize="@dimen/_10ssp" />

                        </com.technzone.miniborsa.ui.base.views.AppTextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            app:passwordToggleEnabled="true">

                            <com.technzone.miniborsa.ui.base.views.AppEditText
                                android:id="@+id/et_password"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:text="@={viewModel.passwordMutableLiveData}" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSignUp"
                            style="@style/AppTheme.Button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/_100sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:text="@string/sign_up"
                            android:textAppearance="@style/normalMediumFontStyle"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_14ssp" />

                        <LinearLayout
                            android:id="@+id/linear_SignInOption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="1dp"
                                android:background="@color/divider_gray" />

                            <com.technzone.miniborsa.ui.base.views.AppTextView
                                style="@style/textview_normal_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:text="@string/or_sign_in_with" />

                            <View
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="1dp"
                                android:background="@color/divider_gray" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgIdRecognition"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_touchid"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.technzone.miniborsa.ui.base.views.AppTextView
                            style="@style/textview_normal_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/already_have_an_account"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/_11ssp" />

                        <com.technzone.miniborsa.ui.base.views.AppTextView
                            android:id="@+id/tvSignIn"
                            style="@style/textview_normal_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:gravity="center"
                            android:text="@string/sign_in_here"
                            android:textAllCaps="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </ScrollView>
    </RelativeLayout>

</layout>