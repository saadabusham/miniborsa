<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_dashes"
        android:padding="@dimen/_14sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAttach"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_images"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.technzone.miniborsa.ui.base.views.AppTextView
            android:id="@+id/descriptionTxt"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            style="@style/textview_normal_semibold"
            android:layout_marginStart="@dimen/layouts_margin_start"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/layouts_margin_end"
            android:alpha="0.5"
            android:text="@string/you_can_upload_up_to_5_images_picture_format_must_be_a_jpg_gif_png_tiff_or_bmp"
            android:textAlignment="center"
            android:textColor="@color/black_alpha"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivAttach" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uploadImagesBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/upload_images"
            android:backgroundTint="@color/button_color"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/white"
            style="@style/AppTheme.Button"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>