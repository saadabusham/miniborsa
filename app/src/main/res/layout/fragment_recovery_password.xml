<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.technzone.miniborsa.ui.auth.forgetpassword.viewmodels.ForgetPasswordViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeHeader"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/layout_toolbar"
                layout="@layout/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_60sdp"
            android:fillViewport="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:shapeAppearanceOverlay="@style/top_cardview_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.technzone.miniborsa.ui.base.views.AppTextView
                        android:id="@+id/tvHeader"
                        style="@style/textview_normal_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_27sdp"
                        android:text="@string/change_your_password"
                        android:textColor="@color/text_header_dark_gray"
                        android:textSize="@dimen/_23ssp" />

                    <com.technzone.miniborsa.ui.base.views.AppTextView
                        style="@style/textview_normal_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_a_new_password_below"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/_13ssp" />

                    <com.technzone.miniborsa.ui.base.views.AppTextView
                        style="@style/textview_normal_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:gravity="center"
                        android:text="@string/new_password"
                        android:textAllCaps="true"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/_11ssp" />

                    <com.technzone.miniborsa.ui.base.views.AppTextInputLayout
                        android:id="@+id/tfPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:hint="@string/enter_new_password"
                        app:passwordToggleEnabled="true">

                        <com.technzone.miniborsa.ui.base.views.AppTextInputEditText
                            android:id="@+id/edPassword"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:text="@={viewModel.passwordMutableLiveData}"
                            android:textSize="@dimen/_10ssp" />

                    </com.technzone.miniborsa.ui.base.views.AppTextInputLayout>

                    <com.technzone.miniborsa.ui.base.views.AppTextInputLayout
                        android:id="@+id/tfConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:hint="@string/confirm_password"
                        app:passwordToggleEnabled="true">

                        <com.technzone.miniborsa.ui.base.views.AppTextInputEditText
                            android:id="@+id/edConfirmPassword"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:text="@={viewModel.confirmPasswordMutableLiveData}"
                            android:textSize="@dimen/_10ssp" />

                    </com.technzone.miniborsa.ui.base.views.AppTextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContinue"
                        style="@style/AppTheme.Button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:text="@string/continue_"
                        android:textAppearance="@style/normalMediumFontStyle"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </ScrollView>
    </RelativeLayout>

</layout>